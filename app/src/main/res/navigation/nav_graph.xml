<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shivam.navigationcomponentdemo.fragments.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_nextFragment"
            app:destination="@id/nextFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_sharedElementFragment"
            app:destination="@id/sharedElementFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/nextFragment"
        android:name="com.example.shivam.navigationcomponentdemo.fragments.next.NextFragment"
        android:label="Next"
        tools:layout="@layout/fragment_next" />
    <fragment
        android:id="@+id/sharedElementFragment"
        android:name="com.example.shivam.navigationcomponentdemo.fragments.shared_element_transition.SharedElementFragment"
        android:label="Shared Element"
        tools:layout="@layout/fragment_shared_element" />

</navigation>